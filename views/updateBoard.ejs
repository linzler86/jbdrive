<!Doctype html>
<html>

<head>

    <link rel="stylesheet" href="../css/update.css">


</head>

<body>
    <header class="header cfixed">
        <h1 class="logo"><a href="/boardlist">JBU TALK</a></h1>
        <h1 id="HHH">게시판 수정</h1>

        <form action="/updateBoard" method="post">
            <div id="up">
                <table class="updacs" border=1 cellspacing="0" summary="게시판수정">
                    <tr>
                        <th>번호</th>
                        <td>
                            <input style="width: 80%;" type="text" name="board_no" value="<%= updateBoard.board_no %>"
                                readonly>
                        </td>
                    </tr>
                    <tr>
                        <th>비밀번호</th>
                        <td>
                            <input style="width: 80%;" type="password" name="board_pw">
                        </td>
                    </tr>
                    <tr>
                        <th>제목</th>
                        <td>
                            <input style="width: 80%;" type="text" name="board_title"
                                value="<%= updateBoard.board_title %>">
                        </td>
                    </tr>
                    <tr>
                        <th>내용</th>
                        <td>
                            <textarea style="width: 80%;" rows="5" cols="50" name="board_content">
                            <%= updateBoard.board_content %>
                        </textarea>
                        </td>
                    </tr>
                    <tr>
                        <th> 작성자 </th>
                        <td>
                            <input style="width: 80%;" type="text" name="board_user"
                                value="<%= updateBoard.board_user %>" readonly>
                        </td>
                    </tr>
            </div>
            <div id="down">
                <button type="submit">수정</button>
            </div>
</body>

</html>